        html {
            scroll-behavior: smooth;
        }

        body {
            /* overflow: hidden; */
            overflow-x: hidden;
            margin: 0;
            background-color: #343a40;
            color: white;
            /* #262B2F;*/
            font-family: 'Roboto', sans-serif;
        }

        canvas {
