        }

        .offWhiteContainer-2 {
            background-color: #F7F4F3;

        }

        a#trendingLink {
            color: white;
        }

        a#trendingLink:hover {
            text-decoration: none;
        }

        .cardEff {
            /* shadow  */
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
        }

        .cardEff:hover {
            box-shadow: 0 10px 18px 0 rgba(0, 0, 0, 0.4);
