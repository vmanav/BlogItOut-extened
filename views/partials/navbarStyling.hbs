    }

    .loginButton {
        background-color: #01BAEF;
        /* #FFFCF9;  */
        border: 1px transparent solid;
        /* color: #343A40; */
        color: white;
    }

    .loginButton:hover {
        background-color: #C7E8F3;
        transition: 0.2s;
        color: #005972;
    }

