<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>
        {{#if allBlogs}}
        All Blogs
        {{else}}
        BlogItOut - Blog
        {{/if}}
    </title>

    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <!-- font awesom 5 kit code -->
    <script src="https://kit.fontawesome.com/e00a1e7cf5.js" crossorigin="anonymous"></script>

    <!-- my script for dashboard side-navbar -->
    <script src="../../scripts/dashnav.js"></script>
    <!-- my gttButton -->
    <script src="../../scripts/gttButton.js"></script>

    {{!-- search Script --}}
    <script src="../../scripts/searchForm.js"></script>


    <style>
        :root {
            --main-blacktext-color: #262626;
        }

        html {
            scroll-behavior: smooth;
        }

        #main {
            background-color: #F7F4F3;
            min-height: 100vh;
            word-wrap: break-word;
        }

        /* pageContent ki css */
        .cardEff {
            /* shadow  */
            color: var(--main-blacktext-color);
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
        }

        .cardEff:hover {
            box-shadow: 0 12px 20px 0 rgba(0, 0, 0, 0.4);
        }

        #pageContent {
            min-height: 100vh;
            display: block;
        }

        .blackCont {
            /* word-wrap: break-word; */
            background-image: radial-gradient(circle farthest-corner at 10% 20%, rgba(32, 45, 58, 1) 0%, rgba(90, 92, 106, 1) 81.3%);
            border-radius: 0% 100% 100% 0% / 0% 50% 50% 100%;
        }

        .offWhiteContainer {
            background-color: #F7F4F3;
            border-radius: 100% 0% 0% 100% / 50% 100% 0% 50%
        }

        a.blogLinks {
            color: var(--main-blacktext-color);
        }

        a.blogLinks:hover {
            text-decoration: none;
        }

        /* Highlight CSS */
        .hl {
            background: #ffc600;
        }

        /* Search Form CSS */
        .search-form {}

        input.search {
            width: 50%;
            border: 3px solid #EFEFEF;
            border-radius: 1px;
            font-size: 1.5rem;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.12), inset 0 0 2px rgba(0, 0, 0, 0.19);
        }

        .original a:nth-child(even) div {
            transform: perspective(100px) rotateX(2deg) translateY(2px) scale(1.001);
        }

        .original a:nth-child(odd) div {
            transform: perspective(100px) rotateX(-2deg) translateY(10px);
        }

        .suggestions a:nth-child(even) div {
            transform: perspective(100px) rotateX(2deg) translateY(2px) scale(1.001);
        }

        .suggestions a:nth-child(odd) div {
            transform: perspective(100px) rotateX(-2deg) translateY(10px);
        }

    </style>

    {{> dashnavStyling}}

    {{> gttButtonStyling}}

</head>

<body>

    <div class="d-flex" id="main">

        <!-- sidebar here -->
        {{> dashnavPartial}}

        <div id="pageContent" class="p-4">

            <!-- Title of Page -->
            <div class="cardEff p-2 h5" style="display: inline;">
                {{#if firstName}}
                {{firstName}} 's Blogs
                {{else}}
                {{#if allBlogs}}
                All Blogs
                {{else}}
                Mortal's Blogs
                {{/if}}
                {{/if}}
            </div>
            <hr>

            {{!-- Search Form --}}
            <div class="row">
                <div class="col-12">

                    <form class="search-form">
                        <div class="form-group">
                            <input type="text" tabindex="1" id="search" class="form-control search p-3 text-center"
                                placeholder="Type Something">
                        </div>
                    </form>

                </div>
            </div>

            {{#if oopsMessage}}
            {{> oopsMessage}}
            {{/if}}

            <div class="container original" id="original">
                {{#each listOfBlogs as |chunk|}}

                <a href="/dashboard/?blogId={{chunk._id}}" class="blogLinks">
                    {{!-- <div class="p-3 m-3 cardEff" style="width: 85%;"> --}}
                    <div class="p-3 m-1 cardEff">

                        <p class="h3 text-center">
                            {{chunk.blogTitle}}
                        </p>

                        {{#if chunk.blogTags}}
                        <p class="h6 text-center text-uppercase font-italic font-weight-light">
                            [ {{chunk.blogTags}} ]
                        </p>
                        {{/if}}

                        <hr>

                        {{#if chunk.datePosted}}
                        <p class="text-right font-italic font-weight-light" id="datePosted">
                            {{{ splitDate chunk.datePosted}}}
                        </p>
                        {{/if}}

                        {{#if author}}
                        <p class="text-left">
                            {{chunk.author}}
                        </p>
                        {{/if}}

                    </div>
                </a>

                {{/each}}
            </div>

            {{!-- Suggestions will come here --}}
            <div class="container suggestions" id="suggestions">

            </div>

            {{!-- Search Form Script --}}
            {{!-- Accesing the rendered `listOfBlogs` from here --}}
            <script>
                console.log("hello i am the script")

                var clientArray = {{{ json listOfBlogs }}};
                //console.log("clientArray - ", clientArray);
            </script>

        </div>

    </div>

    {{!-- Partial for Go-To-Top Button --}}
    {{> gttButtonPartial}}

</body>

</html>